{
	"manifest_version": 2,
	"name": "EcoSurf",
	"description": "Surf climate friendly!",
	"version": "1.0",
	"author": "EcoSurf Team",
	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"js": ["contentScript.js"],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_popup": "popup.html",
		"script": "popup.js"
	},
	"web_accessible_resources": [
		"assets/bg.svg",
		"assets/bgsi.svg",
		"assets/bgsispeed.svg",
		"assets/bgspeed.svg",
		"assets/bsispeed.svg",
		"assets/bspeed.svg",
		"assets/b.svg",
		"assets/bsi.svg"
	],
	"icons": { 
		"16": "assets/16.png",
		"48": "assets/48.png",
	   	"128": "assets/128.png" 
	},
	"permissions": ["scripting", "tabs", "webRequest", "<all_urls>"],
	"applications": {
		"gecko": {
		  "id": "team@ecosurf.io"
		}
	}
}